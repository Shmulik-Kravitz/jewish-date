{
  "name": "jewish-date",
  "description": "Converts Gregorian dates to Hebrew dates and vice versa.",
  "version": "1.0.13",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shmulik-Kravitz/jewish-date"
  },
  "scripts": {
    "start": "esr ./config/start.ts",
    "build": "yarn lint && yarn clean && esr ./config/build.ts",
    "lint": "yarn rome format src && yarn rome check src",
    "clean": "rimraf dist",
    "test": "vitest --config ./config/vitest.config.ts  --coverage",
    "p": "yarn pack --out %s-%v.tgz",
    "inc-version": "yarn version patch",
    "get-version": "node -p \"require('./package.json').version\""
  },
  "devDependencies": {
    "@types/gematriya": "^2.0.2",
    "@types/node": "^16.11.7",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitest/coverage-c8": "^0.30.1",
    "esbuild": "^0.17.18",
    "esbuild-node-externals": "^1.7.0",
    "esbuild-runner": "^2.2.2",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.0",
    "rome": "^12.0.0",
    "tsc-prog": "^2.2.1",
    "typescript": "^4.8.4",
    "vite": "^4.3.1",
    "vitest": "^0.30.1"
  },
  "dependencies": {
    "gematriya": "^2.0.0"
  },
  "packageManager": "yarn@3.3.0",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "publishConfig": {
    "provenance": true
  },
  "files": [
    "dist",
    "lib"
  ],
  "keywords": [
    "jewish",
    "hebrew",
    "date",
    "luach",
    "calendar",
    "convert",
    "hdate",
    "hebcal",
    "hcal"
  ]
}
