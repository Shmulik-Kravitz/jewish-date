{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build",
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["./src/**/*", "./app/**/*", "./__test__/**/*"],
  "exclude": ["./node_modules/**/*", "./dist/**/*", "./yarn/**/*"],
}
